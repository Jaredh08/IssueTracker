<!DOCTYPE html>
<html ng-app="app">
  <head>
    <!-- Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-resource.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-messages.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js"></script>
    <!--functionality script -->
    <script src="/javascripts/userApp.js"></script>
    <!-- styles -->
    <link rel="stylesheet" href="https://bootswatch.com/flatly/bootstrap.min.css" />
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.css" />


  </head>
  <body>
    <ng-view></ng-view>

    <!-- User Listing Template -->
    <script type="text/ng-template" id="/users.html">
        <!-- styles -->
        <link rel="stylesheet" href="https://bootswatch.com/flatly/bootstrap.min.css" />
        <!-- {{ users }} -->
        <p class="navbar-right navbar-text"> Signed in as {{current_user}}</p>
        <div class="container">
        <h2>Users</h2>
        <table class="table table-bordered table-hover ">
          <thead>
            <tr class="danger">
              <th>Username</th>
              <th>Display Name</th>
              <th>Roles</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="user in users">
              <td> <a ng-click="helpers.changeView(user.UserId)">{{ user.UserName }} </a></td>
              <td> {{ user.DisplayName }}</td>
              <td> {{ user.Roles }}</td>
              <td> {{ user.Status }}</td>
            </tr>
          </tbody>
        </table>
        <h2>Create New User</h2>
        <form class="form-vertical" role="form" ng-submit="createUser()">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="project_name">UserName</label>
                        <input type="text" class="form-control" ng-model="user.UserName" />
                    </div>
                    <div class="form-group">
                        <label>Display Name</label>
                        <input type="text" class="form-control" ng-model="user.DisplayName" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" ng-model="user.UserPassword" />
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" ng-model="user.confirmPassword" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" ng-model="user.Email" />
                    </div>
                    <div class="form-group">
                        <span>User Disabled</span>
                        <input type="checkbox" ng-model="user.Disabled" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Employee Type</label>
                        <input type="select" class="form-control" ng-model="user.EmployeeTypeId" />
                    </div>
                    <div class="form-group datepicker" >
                      <md-content>
                        <label>Start Date</label>
                        <md-datepicker ng-model="user.StartDate" md-placeholder="Enter Date"></md-datepicker>
                      </md-content>
                    </div>
                    <div class="form-group">
                        <label>Assigned Roles</label>
                        <input type="text" class="form-control" ng-model="user.assignedRoles" />
                    </div>
                    <div class="form-group">
                        <label>Available Roles</label>
                        <input type="text" class="form-control" ng-model="user.availableRoles" />
                    </div>
                    <div class="form-group">
                        <label>Assigned Projects</label>
                        <input type="text" class="form-control" ng-model="user.assignedProjects" />
                    </div>
                    <div class="form-group">
                        <label>Available Projects</label>
                        <input type="text" class="form-control" ng-model="user.availableRoles" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger" value="Create" />
                    </div>
                </div>
            </div>
        </form>
            </div>
        </div>
      </div>
    </script>
    <!-- End Project Listing Template -->

    <!-- Edit Project Template -->
    <script type="text/ng-template" id="/updateUser.html">
        <div class="container">
        <h2>Edit User</h2>
